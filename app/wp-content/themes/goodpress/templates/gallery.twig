{% extends "base.twig" %}

{% block main %}
<div class="p+">
  <div id="gallery" class="gutter">
    {% for post in posts %}
    <div class="palm--1/1 portable--1/2 1/3 ph mb+">
      <a class="gallery-image" href="{{TimberImage(post.get_field('main_photo')).src}}">
        <img src="{{TimberImage(post.get_field('main_photo')).src|resize(600)}}" alt="{{post.name}}" />
    </a>
    </div>
    {% endfor %}
  </div>
</div>
<script src="{{theme.path}}/assets/javascripts/jquery.magnific-popup.min.js"></script>
<script src="{{theme.path}}/assets/javascripts/gallery.js"></script>
{% endblock %}
